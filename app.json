{
    "appCache": {
        "cache": [
            "index.html"
        ],
        "network": [
            "*"
        ],
        "fallback": []
    },
    "archivePath": "archive",
    "bootstrap": {
        "base": "${app.dir}",
        "manifest": "${build.id}.json",
        "microloader": "bootstrap.js",
        "css": "bootstrap.css"
    },
    "builds": {
        "classic": {
            "toolkit": "classic",
            "theme": "theme-triton",
            "sass": {
            }
        },
        "modern": {
            "toolkit": "modern",
            "theme": "theme-neptune",
            "sass": {
            }
        }
    },
    "cache": {
        "enable": false,
        "deltas": true
    },
    "classic": {
        "js": [
            {
                "path": "${framework.dir}/build/ext-all-rtl-debug.js"
            },
            {
                "path": "resources/ext-locale-ru.js"
            }
        ]
    },
    "classpath": [
        "app",
        "${toolkit.name}/src"
    ],
    "css": [
        {
            "path": "${build.out.css.path}",
            "bundle": true,
            "exclude": [
                "fashion"
            ]
        }
    ],
    "development": {
        "tags": [
        ]
    },
    "framework": "ext",
    "id": "22f5caf0-aeee-44e5-a359-c04ad6f748cb",
    "ignore": [
        "(^|/)CVS(/?$|/.*?$)"
    ],
    "indexHtmlPath": "index.html",

    "js": [
        {
            "path": "app.js",
            "bundle": true
        }
    ],
    "loader": {
        "cache": false,

        "cacheParam": "_dc"
    },
    "modern": {
        "js": [
            {
                "path": "${framework.dir}/build/ext-modern-all-debug.js"
            }
        ]
    },

    "name": "DataDesk",

    "output": {
        "base": "${workspace.build.dir}/${build.environment}/${app.name}/${build.id}",
        "page": "../index.html",
        "manifest": "../${build.id}.json",
        "appCache": {
            "enable": false
        }
    },

    "overrides": [
        "overrides",
        "${toolkit.name}/overrides"
    ],
    "production": {
        "output": {
            "appCache": {
                "enable": true,
                "path": "../cache.appcache"
            }
        },
        "loader": {
            "cache": "${build.timestamp}"
        },
        "cache": {
            "enable": true
        }
    },
    "requires": [
        "font-awesome"
    ],
    "resource": {
        "paths": [
            "resources",
            "${toolkit.name}/resources"
        ]
    },
    "sass": {
        "namespace": "DataDesk",
        "etc": [
            "sass/etc/all.scss",
            "${toolkit.name}/sass/etc/all.scss"
        ],
        "var": [
            "sass/var/all.scss",
            "sass/var",
            "${toolkit.name}/sass/var"
        ],
        "src": [
            "sass/src",
            "${toolkit.name}/sass/src"
        ]
    },

    "testing": {
    },
    "version": "1.0.0.0"
}
